{
  "configurations": {
    "run": {
      "adapter": "vscode-go",
      "configuration": {
        "request": "launch",
        "program": "${fileDirname}",
        "mode": "debug",
        "dlvToolPath": "$HOME/go/bin/dlv"
      }
    },
    "test": {
      "adapter": "vscode-go",
      "configuration": {
        "dlvToolPath": "$HOME/go/bin/dlv",
        "request": "launch",
        "program": "${workspaceFolder}",
        "mode": "test",
        "args": ["-test.run", "${TestName}"]
      }
    }

  }
}
